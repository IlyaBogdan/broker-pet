{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,    
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@chat/*": ["src/modules/chat/*"],
      "@shared/*": ["src/modules/__shared__/*"],
      "@mocks/*": ["test/__mocks__/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*",
  ]
}
